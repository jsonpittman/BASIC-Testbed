220 IF AN$="" THEN GOTO 210
230 FOR I=67 TO 355 STEP 32
240 C=C+1
250 PRINT @ I, A$(C);
260 NEXT I
270 FOR I=89 TO 0 STEP -1
280 FOR K=1 TO 691
290 NEXT K
