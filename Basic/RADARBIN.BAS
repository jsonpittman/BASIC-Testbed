100 ' RADAR SCAN PROGRAM USING ASSEMBLY LANGUAGE PSET
110 CLEAR 100,&H3EFF
120 LOADM "LINEBIN"
130 SCREEN 1,0
140 PMODE 4
150 PCLS
160 X1=&H3F8D: X2=&H3F8E: Y1=&H3F8C: Y2=&H3F8F: FUNC=&H3F90
170 DEFUSR=&H3F00
180 POKE X1,128: POKE Y1, 100
190 POKE X2,255:FOR Y=0 TO 191:POKE FUNC,1:POKE Y2,Y:A=USR0(0):POKE FUNC,0:A=USR0(0):NEXT Y
200 POKE Y2,191:FOR X=255 TO 0 STEP -1:POKE FUNC,1:POKE X2,X:A=USR0(0):POKE FUNC,0:A=USR0(0):NEXT X
210 POKE X2,0:FOR Y=191 TO 0 STEP -1:POKE FUNC,1:POKE Y2,Y:A=USR0(0):POKE FUNC,0:A=USR0(0):NEXT Y
220 POKE Y2,0:FOR X=0 TO 255:POKE FUNC,1:POKE X2,X:A=USR0(0):POKE FUNC,0:A=USR0(0):NEXT X
230 GOTO 190
