10 PCLEAR8
20 L=10
30 DIM A1(L,L),A2(L,L)
40 PMODE 4,1:PCLS:SCREEN 1,1
50 A1(L/2,L/2)=1:PSET(L/2,L/2)
60 PMODE 4,5:PCLS:GOSUB 80:SCREEN 1,1
70 PMODE 4,1:PCLS:GOSUB 80:SCREEN 1,1:GOTO60
80 FOR Y=1 TO L-1
90 FOR X=1 TO L-1
100 V=A1(X,Y-1)+A1(X-1,Y)+A1(X+1,Y)+A1(X,Y+1)
110 A2(X,Y)=V AND 1
120 NEXT X,Y
130 FOR Y=1 TO L-1
140 FOR X=1 TO L-1
150 V=A2(X,Y):A2(X,Y)=0:A1(X,Y)=V
160 IF V=1 THEN PSET(X,Y)
170 NEXT X,Y:RETURN
