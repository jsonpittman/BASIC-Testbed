70 PSET(X+X,Y+Y,V AND 3)
80 NEXT Y,X
90 FOR X=0 TO L:FOR Y=0 TO L
100 V=N(X,Y):V=(V+1)AND 15
110 IF N(X,(Y-1)AND L)=V THEN NN(X,Y)=V:GOTO 150
120 IF N((X-1)AND L,Y)=V THEN NN(X,Y)=V:GOTO 150
130 IF N((X+1)AND L,Y)=V THEN NN(X,Y)=V:GOTO 150
140 IF N(X,(Y+1)AND L)=V THEN NN(X,Y)=V
150 NEXT Y,X
160 FOR X=0 TO L:FOR Y=0 TO L
170 V=NN(X,Y):N(X,Y)=V
180 PSET(X+X,Y+Y,V AND 3)
190 NEXT Y,X:GOTO 90
