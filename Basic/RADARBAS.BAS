100 'RADAR SCAN PROGRAM IN BASIC
110 CLEAR 100,&H3EFF
120 LOADM"LINEBIN"
130 SCREEN 1,0
140 PMODE 4
150 PCLS
160 FOR Y=0 TO 191: LINE (128,100)-(255,Y),PSET: LINE (128,100)-(255,Y),PRESET: NEXT Y
170 FOR X=255 TO 0 STEP -1:LINE (128,100)-(X,191),PSET: LINE (128,100)-(X,191),PRESET: NEXT X
180 FOR Y=191 TO 0 STEP -1: LINE (128,100)-(0,Y),PSET: LINE(128,100)-(0,Y),PRESET: NEXT Y
190 FOR X=0 TO 255: LINE (128,100)-(X,0),PSET: LINE(128,100)-(X,0),PRESET: NEXT X
200 GOTO 160
