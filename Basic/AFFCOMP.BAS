10 CLS:P$="##.## "
20 READ M,A1,A2,B1,B2,C1,C2
21 DE=(A1-B1)*(B2-C2)-(B1-C1)*(A2-B2)
30 FOR N=1 TO M
40 READ AA(1),AA(2),BB(1),BB(2),CC(1),CC(2)
50 A=((AA(1)-BB(1))*(B2-C2)-(BB(1)-CC(1))*(A2-B2))/DE
60 B=((BB(1)-CC(1))*(A1-B1)-(AA(1)-BB(1))*(B1-C1))/DE
70 E=AA(1)-A1*A-A2*B
80 C=((AA(2)-BB(2))*(B2-C2)-(BB(2)-CC(2))*(A2-B2))/DE
90 D=((BB(2)-CC(2))*(A1-B1)-(AA(2)-BB(2))*(B1-C1))/DE
100 F=AA(2)-A1*C-A2*D
110 PRINT@7*N-2,N;
120 PRINT@32,"A=";:PRINT@32+7*N-3,USING P$;A
130 PRINT@64,"B=";:PRINT@64+7*N-3,USING P$;B
140 PRINT@96,"C=";:PRINT@96+7*N-3,USING P$;C
150 PRINT@128,"D=";:PRINT@128+7*N-3,USING P$;D
160 PRINT@160,"E=";:PRINT@160+7*N-3,USING P$;E
170 PRINT@192,"F=";:PRINT@192+7*N-3,USING P$;F
180 NEXT
190 DATA 1,0,0,2,0,1,1
