80 X=ABS(X):Y=ABS(Y):Z=ABS(Z)
90 XX=256-X:YY=256-Y:ZZ=256-Z
100 POKE P,X:POKE P+6,X:POKE P+12,X:POKE P+18,X
110 POKE P+2,Y:POKE P+8,Y:POKE P+26,Y:POKE P+32,Y
120 POKE P+4,Z:POKE P+16,Z:POKE P+28,Z:POKE P+40,Z
130 POKE P+24,XX:POKE P+30,XX:POKE P+36,XX:POKE P+42,XX
140 POKE P+14,YY:POKE P+20,YY:POKE P+38,YY:POKE P+44,YY
150 POKE P+10,ZZ:POKE P+22,ZZ:POKE P+34,ZZ:POKE P+46,ZZ
160 P=P+48:NEXT
170 PMODE 4,1:PCLS:SCREEN 1,1
180 EXEC &H4F80
190 GOTO 190
