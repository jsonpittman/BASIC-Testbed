10 CLS0
20 '***DEFINE LETTER ARRAY***
30 A=65
40 FOR R=1 TO 5
50 FOR C=1 TO 5
60 L$(R,C)=CHR$(A)
70 GOSUB 600
80 A=A+1
90 NEXT C,R
100 R=5:C=5
110 L$(R,C)=" "
120 GOSUB 600
130 F=1
140 FOR N=1 TO 100
150 E=RND(4)
160 ON E GOTO 230,280,390,440
170 NEXT N
180 F=0
190 IF F=1 THEN 170
200 K$=INKEY$:IF K$="" GOTO 200
210 '***MOVE LEFT***
220 IF K$<>CHR$(8) THEN 270
230 IF C>=5 THEN 530
240 T=C+1
250 GOTO 310
260 '***MOVE RIGHT***
270 IF K$<>CHR$(9) THEN 380
280 IF C<=1 THEN 530
290 T=C-1
300 '**MOVE LEFT/RIGHT ROUTINE**
310 L$(R,C)=L$(R,T)
320 GOSUB 600
330 L$(R,T)=" "
340 C=T
350 GOSUB 600
360 GOTO 190
370 '***MOVE DOWN***
380 IF K$<>CHR$(10) THEN 430
390 IF R<=1 THEN 530
400 T=R-1
410 GOTO 470
420 '***MOVE UP***
430 IF K$<>"^" THEN 190
440 IF R>=5 THEN 530
450 T=R+1
460 '***MOVE UP/DOWN ROUTINE***
470 L$(R,C)=L$(T,C)
480 GOSUB 600
490 L$(T,C)=" "
500 R=T
510 GOSUB 600
520 GOTO 190
530 IF F=1 THEN 150
540 PRINT @40,"ILLEGAL MOVE";
550 FOR B=1 TO 250
560 NEXT B
570 PRINT @40,STRING$(12,128);
580 GOTO 190
590 '***DISPLAY MOVE***
600 PRINT @68+R*64+C*3,L$(R,C)+" ";
610 SOUND 10*R*C,1
620 RETURN
