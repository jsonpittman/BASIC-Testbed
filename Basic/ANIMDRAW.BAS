10 FOR N=1 TO 8:READ TI$(N):NEXT
20 PMODE4,1:COLOR0,5:PCLS:SCREEN1,1
30 R1=12:R2=14:R3=16:PI=4*ATN(1)
40 HH=32:VV=32
50 FOR N=0 TO 95
60 A=N*3.75:A=A*ATN(1)/45
70 A1=3*A:A2=2*A:A3=A
80 IF N=12 THEN 280
90 IF N=24 THEN 280
100 IF N=36 THEN 280
110 IF N=48 THEN 280
120 IF N=60 THEN 280
130 IF N=72 THEN 280
140 IF N=84 THEN 280
150 X1=INT(HH+R1*COS(A1+PI/6))
160 Y1=INT(VV-R1*SIN(A1))
170 X2=INT(HH+R2*COS(A2+PI/6))
180 Y2=INT(VV-R2*SIN(A2))
190 X3=INT(HH+R3*COS(A3+PI/6))
200 Y3=INT(VV-R3*SIN(A3))
210 CIRCLE(HH,VV),8
220 PSET(X1,Y1):PSET(X2,Y2):PSET(X3,Y3)
230 HH=HH+64:IF HH>224 THEN HH=32:VV=VV+64:IF VV>160 THEN VV=32
240 NEXT N:VERIFYON
250 SAVEM TI$(8),&HE00,&H25FF,&HE00
260 GOTO 260
270 DATA ANIM1A,ANIM1B,ANIM1C,ANIM1D,ANIM1E,ANIM1F,ANIM1G,ANIM1H
280 VERIFYON
290 SAVEM TI$(N/12),&HE00,&H25FF,&HE00
300 PMODE4,1:COLOR0,5:PCLS:SCREEN1,1:GOTO150
